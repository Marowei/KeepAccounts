<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#d3d3d3"
    android:weightSum="1">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看明細"
        android:textSize="18dp"
        android:id="@+id/btnList"
        android:textColor="#fd0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增項次"
        android:id="@+id/textView5"
        android:layout_below="@+id/btnList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/eat"
        android:id="@+id/btnEat"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/clothes"
        android:id="@+id/btnClothes"
        android:layout_alignTop="@+id/btnEat"
        android:layout_toRightOf="@+id/btnEat"
        android:layout_toEndOf="@+id/btnEat" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/house"
        android:id="@+id/btnHouse"
        android:layout_alignTop="@+id/btnClothes"
        android:layout_toRightOf="@+id/btnClothes"
        android:layout_toEndOf="@+id/btnClothes" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/car"
        android:id="@+id/btnCar"
        android:layout_alignTop="@+id/btnHouse"
        android:layout_toRightOf="@+id/btnHouse"
        android:layout_toEndOf="@+id/btnHouse" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/book"
        android:id="@+id/btnBook"
        android:layout_alignTop="@+id/btnCar"
        android:layout_toRightOf="@+id/btnCar"
        android:layout_toEndOf="@+id/btnCar" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/game"
        android:id="@+id/btnGame"
        android:layout_below="@+id/btnEat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/gas"
        android:id="@+id/btnGas"
        android:layout_alignTop="@+id/btnGame"
        android:layout_alignLeft="@+id/btnClothes"
        android:layout_alignStart="@+id/btnClothes" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bankcard"
        android:id="@+id/btnBandCard"
        android:layout_alignTop="@+id/btnGas"
        android:layout_toRightOf="@+id/btnGas"
        android:layout_toEndOf="@+id/btnGas" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/health"
        android:id="@+id/btnHealth"
        android:layout_alignTop="@+id/btnBandCard"
        android:layout_toRightOf="@+id/btnBandCard"
        android:layout_toEndOf="@+id/btnBandCard" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/money"
        android:id="@+id/btnMoney"
        android:layout_alignTop="@+id/btnHealth"
        android:layout_toRightOf="@+id/btnHealth"
        android:layout_toEndOf="@+id/btnHealth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="項目 : "
        android:id="@+id/textView6"
        android:layout_below="@+id/btnGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textItem"
        android:layout_below="@+id/btnGame"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="備註 : "
        android:id="@+id/textView7"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/editRemark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editRemark"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:textSize="18dp"
        android:layout_alignRight="@+id/btnMoney"
        android:layout_alignEnd="@+id/btnMoney" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="費用 : "
        android:id="@+id/textView8"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/editMoney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editMoney"
        android:layout_below="@+id/editRemark"
        android:layout_alignLeft="@+id/editRemark"
        android:layout_alignStart="@+id/editRemark"
        android:layout_alignRight="@+id/editRemark"
        android:layout_alignEnd="@+id/editRemark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認"
        android:id="@+id/btnAdd"
        android:layout_alignTop="@+id/btnChangeDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnChangeDate"
        android:layout_toRightOf="@+id/btnChangeDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期 : "
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:layout_below="@+id/btnChangeDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改日期"
        android:textSize="18dp"
        android:id="@+id/btnChangeDate"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnBandCard"
        android:layout_alignEnd="@+id/btnBandCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDate"
        android:textSize="40dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnAdd"
        android:layout_alignEnd="@+id/btnAdd"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
